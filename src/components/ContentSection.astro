---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="bg-cream px-4 py-8 md:py-12">
  <div class="max-w-xl mx-auto md:max-w-none">
    <h2 class="text-red text-2xl md:text-3xl font-bold tracking-wide mb-4 text-center md:text-left">
      {title}
    </h2>
    <div class="text-dark/90 leading-relaxed text-center md:text-left">
      <slot />
    </div>
  </div>
</section>
