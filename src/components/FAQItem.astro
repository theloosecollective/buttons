---
interface Props {
  question: string;
}

const { question } = Astro.props;
---

<details class="group border-b border-dark/10 last:border-b-0">
  <summary class="flex justify-between items-center cursor-pointer py-4 text-red font-bold text-lg hover:text-red-dark transition-colors">
    <span>{question}</span>
    <span class="text-2xl group-open:rotate-45 transition-transform">+</span>
  </summary>
  <div class="pb-4 text-dark/90 leading-relaxed">
    <slot />
  </div>
</details>
