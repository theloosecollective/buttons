---
interface Props {
  question: string;
}

const { question } = Astro.props;
---

<div class="mb-6 text-center">
  <h3 class="font-display text-brown text-lg md:text-xl font-bold tracking-wide mb-2">
    {question}
  </h3>
  <div class="font-body text-brown leading-relaxed">
    <slot />
  </div>
</div>
