---
import SocialLink from "./SocialLink.astro";
---

<footer class="bg-red text-cream px-4 py-4">
	<div class="max-w-4xl mx-auto flex items-center justify-between">
		<!-- Left: Brand info + Social Links -->
		<div class="flex flex-col gap-2">
			<div class="text-sm leading-tight">
				<div class="font-display">The Loose Collective</div>
				<a
					href="mailto:buttons@loosecollective.dev"
					class="font-body underline">buttons@loosecollective.dev</a
				>
			</div>

			<!-- Social Links -->
			<div class="flex items-center gap-2">
				<SocialLink
					platform="instagram"
					handle="theloosecollective.nyc"
				/>
				<SocialLink platform="bluesky" handle="loosecollective.dev" />
				<SocialLink platform="github" handle="theloosecollective" />
			</div>
		</div>

		<!-- Donate Button -->
		<button
			onclick="alert(`Thank you so much! We're considering taking donations but for now we're self-funded`)"
			class="font-display bg-cream text-red text-sm px-4 py-1.5 rounded hover:bg-cream/90 transition-colors cursor-pointer"
		>
			DONATE
		</button>
	</div>
</footer>
