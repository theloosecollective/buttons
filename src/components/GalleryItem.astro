---
interface Props {
  src: string;
  alt: string;
  caption: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="flex flex-col">
  <div class="aspect-square overflow-hidden rounded-sm bg-cream-dark">
    <img
      src={src}
      alt={alt}
      class="w-full h-full object-cover"
      loading="lazy"
    />
  </div>
  <figcaption class="mt-2 text-sm text-dark/70 italic text-center">
    {caption}
  </figcaption>
</figure>
