---
import buttonImg from "../assets/button.png";
---

<header class="bg-cream pt-12 pb-10 md:pb-16 px-4 text-center">
	<!-- Main Title -->
	<h1 class="font-display text-5xl md:text-6xl text-red mb-0">
		LOOSE COLLECTIVE
	</h1>

	<!-- Button Supply Badge -->
	<div class="mt-1 mb-3 flex justify-center">
		<div
			class="font-display text-brown text-3xl md:text-4xl flex items-baseline gap-2"
		>
			<img src={buttonImg.src} alt="" class="w-4 h-4" />
			BUTTON SUPPLY
			<img src={buttonImg.src} alt="" class="w-4 h-4" />
		</div>
	</div>

	<!-- Tagline -->
	<p class="font-body text-brown text-lg md:text-xl mt-6 max-w-md mx-auto">
		Free buttons for movements and causes in New York City
	</p>
</header>
